.nav{
  width:100%; 
  height:80rpx;
  display:flex;
  flex-direction:row; 
  background-color: #28004d;
}
.default{
  line-height:80rpx;
  text-align:center;
  flex:1;
  color:#fff;
  font-weight:bold;
  font-size:11pt;
}
.devices{
   border-right:1px solid gainsboro; 
}
.red{
  line-height:80rpx;
  text-align:center;
  color:#44da56;
  flex:1;
  /* border-right:1px solid gainsboro; */
  font-weight:bold;
  font-size:12pt;
}
.show{
  display:block;
}
.hidden{
  display:none;
}
.device-add, .group-add{
  margin: 40px;
}



.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  /*display: flex;
  flex-direction: column;
  justify-content: center;*/
}
.btn-line{
  width: 1px;
  background-color: #A5A5A5;
}
.btn-view{
  width: 100%;
  display: flex;
  height: 40px;
  flex-direction: row;
  justify-content: space-around
}
.line-top{
   width: 100%;
   height: 1px;
   background-color: #A5A5A5;
}
.btn-cancel{
  width: 49%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.dialog-title{
  margin-top: 20px;
  text-align: center;
  margin-bottom: 15px;

}
.input-style{
  width: 96%;
  margin-left: 2%;
  height: 30px;
  text-align: center;
}

.input-view{
  height: 30px;
  width: 70%;
  margin-left: 15%;
  border: 1px #A5A5A5 solid;
  border-radius: 5px;
  margin-bottom: 20px;
  margin-top: 20px;
}