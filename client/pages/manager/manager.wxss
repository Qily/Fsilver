/* pages/manager/manager.wxss */
.search-device{
  background-color: rgba(240, 240, 240, 0.6);
  font-size: 16px;
  height: 24px;
  margin: 8px;
  padding: 4px;
}
.device-name{
  background-color:rgba(40, 240, 40, 0.2);
  opacity: 60%;
  margin-left: 8px;
  margin-right: 8px;
  margin-bottom: 4px;
  margin-top: 4px;
  padding: 8px;
  border-radius: 5px;
}
.device-name:hover{
  background-color:rgba(40, 180, 40, 0.5);
}

.device-name text{
  font-size: 18px;
  color: #232323;
}

